<div class="panel panel-default">
 <div class="panel-heading" style="font-weight: bold;">
  メッセージ一覧
 </div>
 
 <div class="panel-body">
  <% @messages.each do |message| %>
   <span class="label label-info"><%= message.name %></span>
   <%= message.body %>
   <br>
  <% end %> 
 </div>
</div>

<%= form_for @message, :html => {:class => 'form-horizontal'} do |f| %>
 <div class="form-group">
  <%= f.label :name, "名前:", class: "col-xs-2 control-label"%>
  <div class="col-xs-10">
  　<%= f.text_field :name, class: "form-control" %>
  </div>
 </div>
 
 <div class="form-group">
  <%= f.label :name, "内容:", class: "col-xs-2 control-label"%>
  <div class="col-xs-10">
  <%= f.text_area :body, class: "form-control" %> 
  </div>
 </div>
 <div class="col-xs-10 col-sm-offset-2">
 <%= f.submit "投稿", class: "btn btn-sm btn-primary" %>
 </div>
<% end %> 

