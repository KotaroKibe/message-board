<div class="panel panel-default">
 <div class="panel-heading" style="font-weight: bold;">
  メッセージ一覧
 </div>
 
 <div class="panel-body">
  <% @messages.each do |message| %>
   <span class="label label-info"><%= message.name %></span>
   <%= message.body %>
   <br>
  <% end %> 
 </div>
</div>

<%= form_for(@message) do |f| %>
 <div class="form-group">
 <label for="message_name">名前：</label>
 <%= f.text_field :name, class: "form-control" %>
 </div>
 
 <div class="form-group">
 <label for="message_body">内容：</label>
 <textarea id="message_body" name="message[body]" rows="3" class="form-control"></textarea>
 </div>
 <%= f.submit "投稿", class: "btn btn-sm btn-primary" %>
<% end %> 

