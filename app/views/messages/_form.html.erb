<%= form_for @message, :html => {:class => 'form-horizontal'} do |f| %>
 <% if @message.errors.present? %>
  <div class="alert alert-danger">
   <%= alert %>
   <ul>
    <% @message.errors.full_messages.each do |full_message| %>
    <li>
     <%= full_message %>
    </li>
    <% end %>
   </ul>
  </div>
 <% end %>
 
 <div class="form-group">
  <label for="message_name" class="col-xs-2 control-label">名前:</label>
  <div class="col-xs-8">
  　<%= f.text_field :name, class: "form-control" %>
  </div>
 </div>
 
 <div class="form-group">
  <label for="message_age" class="col-xs-2 control-label">年齢:</label>
  <div class="col-xs-8">
   <%= f.text_field :age, class: "form-control" %>
  </div> 
 </div>
 
 <div class="form-group">
  <label for="message_body" class="col-xs-2 control-label">内容:</label>
  <div class="col-xs-8">
  <%= f.text_area :body, class: "form-control" %> 
  </div>
 </div>
 
 <div class="col-xs-8 col-sm-offset-2">
 <%= f.submit "投稿", class: "btn btn-sm btn-primary" %>
 </div>
<% end %> 

